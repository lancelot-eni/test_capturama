<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Êtes vous sûr(e) de vouloir supprimer {{ user.firstname }} {{ user.name }} ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-danger">Supprimer {{ user.firstname }} {{ user.name }}</button>
</form>
